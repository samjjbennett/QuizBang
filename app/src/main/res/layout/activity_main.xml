<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">




    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#ff11ff02"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Player:"
            android:id="@+id/player_one_name"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#ff11ff02"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Player 1 Score"
            android:id="@+id/player_one_score"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="-20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#ff11ff02"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Player:"
            android:id="@+id/player_two_name"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#ff11ff02"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Player 2 Score"
            android:layout_marginLeft="-20dp"
            android:id="@+id/player_two_score"
            android:layout_weight="1"/>


        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#ff11ff02"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cat One"
            android:id="@+id/cat_one"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#ff11ff02"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cat Two"
            android:id="@+id/cat_two"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#ff11ff02"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cat Three"
            android:id="@+id/cat_three"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#ff11ff02"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cat Four"
            android:id="@+id/cat_four"
            android:layout_weight="1"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/redbutton"
            android:id="@+id/row1red"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/bluebutton"
            android:id="@+id/row1blue"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/purplebutton"
            android:id="@+id/row1purple"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/blackbutton"
            android:id="@+id/row1black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/redbutton"
            android:id="@+id/row2red"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/bluebutton"
            android:id="@+id/row2blue"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/purplebutton"
            android:id="@+id/row2purple"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/blackbutton"
            android:id="@+id/row2black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/redbutton"
            android:id="@+id/row3red"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/bluebutton"
            android:id="@+id/row3blue"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/purplebutton"
            android:id="@+id/row3purple"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/blackbutton"
            android:id="@+id/row3black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/redbutton"
            android:id="@+id/row4red"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/bluebutton"
            android:id="@+id/row4blue"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/purplebutton"
            android:id="@+id/row4purple"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/blackbutton"
            android:id="@+id/row4black"/>

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/start"
        android:background="@drawable/rounded_corners"
        android:text="Start"/>


</LinearLayout>
